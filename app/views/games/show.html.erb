<div class= "game_show">
  <div class= "field">
    <%=image_tag(@game.photo) %><br/>
  </div>
  <%= @game.title %><br/>
  <div class = "field">
  <%= form_for [@game, @comment] do |form| %>
    <%= form.text_field :comment, placeholder: "Add New Comment" %>
    <br/>
    </div>
    <%= form.submit%>
    <br/>
  <% end %>
  <div class= "comment_container">
  <label>Comments: </label>
  <% @game.comments.order(created_at: :desc).each do |comment| %>
    <ul class= "game_comments">
      <li>
        <%= comment.user.name %>:
        <%= comment.comment %>
      </li>
    </ul>
  <% end %>
  </div>
</div>

